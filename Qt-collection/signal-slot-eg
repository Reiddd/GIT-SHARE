/*
example of signal and slot
*/
#include <QApplication>
#include <QPushButton>

int main(int argc,char *argv[])
{
	QApplication app(argc,argv);
	QPushButton button("exit");
	/*connect, whose arguments are either string or pointer to function.
	  object::connect(sender,signal,reciever,slot)
	  signal and slot mostly are a pointer to function,so they should be like &func_name*/
	object::connect(&button,&QPushButton::clicked,&QApplication::quit);

	return app.exec();
}

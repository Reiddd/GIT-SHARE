*/


QDir* folder = new QDir;
/*
  no parentheses
*/


QDir::exists(QString& path);
/*
  determine whether a folder exists
*/


QDir::mkdir(QString& path);
/*
  return true if the folder is created successfully
*/


QString.arg();
/*
  similar to printf
*/


QFile::remove(QString& path);


QGraphicsScene::addSimpleText(QString);


QPen::setStyle(Qt::PenStyle);
/*
  Qt::PenStyle :
  1. Qt::SolidLine
  2. Qt::DashLine
  3. Qt::DashDotLine
  4. Qt::DashDotDotLine
*/


QPen::setWidth(qint32 );
QPen::setWidthF(qreal );
/*
  the line width is set on pixel level
*/


QPen::setBrush(const QBrush&);
/*
  Qt::BrushStyle : 
  1. Qt::SolidPattern
  2. Qt::Dense1Pattern
  3. Qt::Dense2Pattern
  4. Qt::Dense3Pattern
  5. Qt::Dense4Pattern
  6. Qt::Dense5Pattern
  7. Qt::Dense6Pattern
  8. Qt::Dense7Pattern
  9. Qt::NoBrush
  10. Qt::HorPattern
  11. Qt::VerPattern
  12. Qt::CrossPattern
  13. Qt::BDiagPattern
  14. Qt::FDiagPattern
  15. Qt::DiagCrossPattern
  16. Qt::LinearGradientPattern
  17. Qt::RadialGradientPattern
  18. Qt::ConicalGradientPattern

  others : Qt::Color
*/


QPen::setCapStyle(Qt::PenCapStyle);
/*
  Qt::PenCapStyle : 
  1. Qt::FlatCap
  2. Qt::SquareCap
  3. Qt::RoundCap
*/


QPen::setJoinStyle(Qt::PenJoinStyle);
/*
  Qt::PenJoinStyle :
  1. Qt::BevalJoin
  2. Qt::MiterJoin
  3. Qt::RoundJoin
*/

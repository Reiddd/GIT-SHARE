QWidget::setBackgroundRole(QPalette::MidLight)
/*
  QPalette::Background
  
  QPalette::Button
  QPalette::Light
  QPalette::MidLight : between [Light] and [Button]
  QPalette::Dark
  QPalette::Mid : between [Button] and [Dark]
  
  QPalette::Shadow
  QPalette::HighLight : used when the object is selected
  
  QPalette::Link : used for hyperlink
  QPalette::LinkVisited
*/


QWidget::setAutoFillBackground(true)
/*
  AutoFillBackground will fill the background before triggering the paint event
*/




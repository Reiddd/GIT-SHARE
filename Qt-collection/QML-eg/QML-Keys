/*
  [Key.onPressed : func] , it accepts a func, so we can just pass a {func body} without name to it. This seems like a temporary func.
  
  outside the func body it's QML, but inside it's C++
*/
import QtQuick 2.3

Rectangle{
	width: 200
	height: 100
	color: "red"
	
	Text{
		anchors.centerIn: parent
		text: "Hello World"
	}
	
	focus: true
	Keys.onPressed:{
		if(event.key == Qt.Key_Return){
			color = "blue";
			event.accepted = true;
		}
	}
}

# !~/Documents/shell_scripts/loop
# an example of loop in shell scripts.

echo "enter an positive integer:\n"
read count

sum=$count

echo "\nYou entered $count\n"
while [ $count -gt 0 -o $count -eq 0 ];do
	if [ $count -lt 0 -o $count -eq 0 ];then break;fi
	echo "current sum == $sum"
	count=$((count-1))
	sum=$((sum+count))
done

echo -e "final sum == $sum"

cat <<_EOF_

notice the [break] and [continue].
also notice the (()).
_EOF_

cat<<_EOF_

while command;do command;[command;command;...command;]done
_EOF_
